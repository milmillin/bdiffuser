{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "mission",
    "agent",
    "verdict",
    "confidence",
    "checks",
    "issues",
    "summary",
    "evidence"
  ],
  "properties": {
    "mission": {
      "type": "integer",
      "minimum": 1,
      "maximum": 66
    },
    "agent": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "verdict": {
      "type": "string",
      "enum": ["pass", "fail", "inconclusive"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "status", "note"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 160
          },
          "status": {
            "type": "string",
            "enum": ["pass", "fail", "inconclusive"]
          },
          "note": {
            "type": "string",
            "minLength": 1,
            "maxLength": 600
          }
        }
      }
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["severity", "title", "details", "repro"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 180
          },
          "details": {
            "type": "string",
            "minLength": 1,
            "maxLength": 900
          },
          "repro": {
            "type": "string",
            "minLength": 1,
            "maxLength": 700
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2400
    },
    "evidence": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 500
      }
    }
  }
}
